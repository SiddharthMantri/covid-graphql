{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "server": ["server/"],
      "client": ["client/"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "jsx": "react"
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
